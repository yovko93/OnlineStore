@model IndexViewModel
@using OnlineStore.Common
@{
    this.ViewData["Title"] = "Home";
}

@{
    var products = Model.Products;
    var firstProduct = products.Any() ? products[0] : null;
    var secondProduct = products.Count > 1 ? products[1] : null;
    var thirdProduct = products.Count > 2 ? products[2] : null;
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
</div>


@if (!products.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for online shoping!</h1>
        <p class="lead">There are no products in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary btn-lg" role="button">Add Product</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstProduct != null)
        {
            <div class="carousel-item active text-center">
                <img class="d-block w-100" src="@firstProduct.ImageUrl" alt="@firstProduct.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@firstProduct.Id">@firstProduct.Name @firstProduct.Price</a></h5>
                </div>
            </div>
        }
        @if (secondProduct != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondProduct.ImageUrl" alt="@secondProduct.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@secondProduct.Id">@secondProduct.Name @secondProduct.Price</a></h5>
                </div>
            </div>}
        @if (thirdProduct != null)
        {

            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdProduct.ImageUrl" alt="@thirdProduct.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@thirdProduct.Id">@thirdProduct.Name @thirdProduct.Price</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-6 text-center">
            @Model.TotalProducts Products
        </h2>
        <h2 class="col-md-6 text-center">
            @Model.TotalUsers Users
        </h2>
    </div>
</div>
